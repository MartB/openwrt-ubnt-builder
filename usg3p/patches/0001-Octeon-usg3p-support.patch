+++ b/target/linux/octeon/base-files/lib/preinit/79_move_config
@@ -5,7 +5,7 @@ move_config() {
 	. /lib/functions.sh
 
 	case "$(board_name)" in
-		erlite)
+		erlite | usg3p)
